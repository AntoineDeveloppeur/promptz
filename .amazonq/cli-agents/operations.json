{
  "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
  "name": "operations",
  "description": "",
  "prompt": null,
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--isolated",
        "--storage-state=./.playwright/.auth/user.json"
      ]
    }
  },
  "tools": [
    "fs_read",
    "fs_write",
    "execute_bash",
    "use_aws",
    "@playwright",
    "@github"
  ],
  "toolAliases": {},
  "allowedTools": ["fs_read", "use_aws"],
  "resources": [
    "file://AmazonQ.md",
    "file://README.md",
    "file://.amazonq/rules/**/*.md"
  ],
  "hooks": {
    "agentSpawn": [
      {
        "command": "aws sts get-caller-identity",
        "timeout_ms": 10000,
        "cache_ttl_seconds": 300
      },
      {
        "command": "sh .amazonq/hooks/git.sh",
        "timeout_ms": 10000,
        "cache_ttl_seconds": 300
      }
    ]
  },
  "toolsSettings": {
    "use_aws": {
      "allowedServices": [
        "iam",
        "logs",
        "cloudtrail",
        "amplify",
        "appsync",
        "dynamodb",
        "cognito"
      ]
    },
    "fs_write": {
      "allowedPaths": ["docs/**"]
    }
  },
  "useLegacyMcpJson": true
}
